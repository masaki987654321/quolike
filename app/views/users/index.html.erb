<h4>ユーザー一覧</h4>

<%= will_paginate %>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user_path(user), class: 'btn btn-link btn-sm' %>
      <% if current_user.admin?  %>
        | <%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-danger btn-sm' %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>