<div class="row">
  <div class="col-md-10">
    <p><%= link_to @user.name, user_path(@user), class: 'btn btn-secondary btn-sm' %>さんの質問</p>
    <p>
      <% @question.tag_list.each do |tag| %>
        <button type="button" class="btn btn-primary btn-sm"><%= tag %></button>
      <% end%>
    </p>
    <h4>質問内容</h4>
    <div class="question">
      <p class="content"><%= @question.content %></p>
      
      <p><%= link_to "回答する", new_answer_path(question_id: @question.id), class: 'btn btn-primary' %></p>
   </div>
    <% if @question.answers.any? %>
      <hr>
      <p>回答数 (<%= @question.answers.count %>)</p>
      <ol>
        <%= render partial: "answers/answer", collection: @answers %>
      </ol>
      <%= will_paginate @answers %>
    <% end %>
  </div>
</div>

